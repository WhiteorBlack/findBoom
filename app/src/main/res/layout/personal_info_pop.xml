<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="vertical">

    <LinearLayout
        style="@style/PopParent"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pop_title_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/title_personal" />

            <ImageView style="@style/PopClose" />
        </FrameLayout>

        <findboom.android.com.findboom.widget.CircleImageView
            android:id="@+id/img_user_photo"
            android:layout_width="@dimen/pop_title_height"
            android:layout_height="@dimen/pop_title_height"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_logo"
            app:border_color="@color/content_yellow"
            app:border_width="2dp" />

        <EditText
            android:id="@+id/txt_user_name"
            style="@style/settingContent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:gravity="center"
            android:textCursorDrawable="@color/content_yellow"
            android:text="用户名"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_user_level"
                    style="@style/text18White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/settingContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="级"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pop_title_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_user_intergra"
                    style="@style/text18White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="1"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/settingContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/personal_info_bg"
                android:gravity="center">

                <EditText
                    android:id="@+id/txt_user_age"
                    style="@style/text18White"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@color/content_yellow"
                    android:layout_height="match_parent"
                    android:text="20"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@null"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/settingContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="岁"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@mipmap/personal_info_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_user_city"
                    style="@style/text18White"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="郑州"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/settingContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="市"
                    android:layout_marginRight="5dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@mipmap/personal_info_bg"
                android:gravity="center">

                <EditText
                    android:id="@+id/txt_user_work"
                    style="@style/text18White"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="山班组"
                    android:textCursorDrawable="@color/content_yellow"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/settingContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="职业"
                    android:layout_marginRight="5dp"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/btn_edit_info" />
    </FrameLayout>
</LinearLayout>