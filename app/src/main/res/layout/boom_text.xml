<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fl_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/text_boom_bg">
        <TextView
            android:id="@+id/txt_info"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/pop_margin"
            android:layout_marginRight="@dimen/pop_margin"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_detial"
        android:layout_width="@dimen/pop_btn_wide"
        android:background="@mipmap/red_check_detial"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/pop_btn_height" />

</LinearLayout>