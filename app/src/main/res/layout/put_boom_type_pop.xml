<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/PopParent"
        android:layout_height="wrap_content"
        android:background="@drawable/put_boom_bg"
        android:padding="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pop_title_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/title_put_boom" />

            <ImageView style="@style/PopClose" />
        </FrameLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/pop_btn_wide"
            android:layout_height="@dimen/pop_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/btn_code_confirm" />

    </LinearLayout>
</LinearLayout>