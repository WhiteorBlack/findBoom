<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <findboom.android.com.findboom.widget.CircleImageView
        android:id="@+id/img_user_photo"
        android:layout_width="@dimen/pop_title_height"
        android:layout_height="@dimen/pop_title_height"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_logo"
        app:border_color="@color/content_yellow"
        app:border_width="2dp" />

    <EditText
        android:id="@+id/txt_user_name"
        style="@style/settingContent"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:gravity="center"
        android:text="用户名"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_user_level"
                style="@style/text18White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                style="@style/settingContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="级"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pop_title_height"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_user_intergra"
                style="@style/text18White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                style="@style/settingContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/personal_info_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_user_age"
                style="@style/text18White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                style="@style/settingContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="岁"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@mipmap/personal_info_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_user_city"
                style="@style/text18White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="郑州"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                style="@style/settingContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="市"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@mipmap/personal_info_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_user_work"
                style="@style/text18White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="山班组"

                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                style="@style/settingContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="职业"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>