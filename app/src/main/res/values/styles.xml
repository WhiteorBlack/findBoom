<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 商品信息弹窗动画 -->
    <style name="goodsPopStyle">
        <item name="android:windowEnterAnimation">@anim/zoomin</item>
        <item name="android:windowExitAnimation">@anim/zoomout</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MsgPop">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="PopParent">
        <item name="android:id">@id/ll_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pop_margin</item>
        <item name="android:layout_marginRight">@dimen/pop_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_personal_center</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="PopClose">
        <item name="android:id">@id/img_close</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@mipmap/icon_close</item>
    </style>

    <style name="GoodsPic">
        <item name="android:layout_width">@dimen/pic_size</item>
        <item name="android:layout_height">@dimen/pic_size</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTitle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PopTitle">
        <item name="android:textColor">@color/content_yellow</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="settingContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/content_yellow</item>
    </style>

    <style name="text18White">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PopNmaeWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="tabLayoutStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/system_msg_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="PwdBtn">
        <item name="android:layout_width">@dimen/pop_pwd_btn_wide</item>
        <item name="android:layout_height">@dimen/pop_pwd_btn_height</item>
    </style>

    <style name="checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>
